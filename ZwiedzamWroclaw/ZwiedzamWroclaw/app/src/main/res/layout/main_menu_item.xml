<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/menuGlowneBigImageURL"
            android:layout_width="0dp"
            android:layout_height="230dp"
            android:layout_gravity="top"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/menuGlowneTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/menuGlowneBigImageURL"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/menuGlowneBigImageURL"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/menuGlowneBigImageURL"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/menuGlowneShortDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="TextView\nTextView\nTextView\nTextView\nTextView"
            android:maxLines="4"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/menuGlowneTitle"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/menuGlowneBigImageURL"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/menuGlowneBigImageURL"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="0dp"
            android:layout_height="2dp"
            app:srcCompat="@color/colorPrimary"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/menuGlowneShortDesc"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/menuGlowneBigImageURL"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/menuGlowneBigImageURL"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

    </android.support.constraint.ConstraintLayout>

</LinearLayout>